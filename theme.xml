<theme>
  <formatVersion>7</formatVersion>
  <view name="screen">
   <text name="clock">
      <color>ffffff</color>
          <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.039</fontSize>
      <pos>0.48 0.010</pos>
	  <origin>0 0</origin>
      <size>0.09 0.058</size>
      <alignment>center</alignment>
      <verticalAlignment>center</verticalAlignment>
    </text>
    <controllerActivity name="controllerActivity">
      <pos>0.832 0.025</pos>
      <size>0.085 0.025</size>
      <horizontalAlignment>right</horizontalAlignment>
      <itemSpacing>0.003</itemSpacing>
      <imagePath>./assets/gamepad.svg</imagePath>
      <color>ffffff</color>
      <activityColor>A0A0FFC0</activityColor>
      <hotkeyColor>ffffff</hotkeyColor>
    </controllerActivity>
    <batteryIndicator name="batteryIndicator">
         <size>0.07 0.050</size>
         <color>ffffff</color>
         <itemSpacing>0</itemSpacing>
         <full>./_inc/images/battery-100-vertical.svg</full>
         <at75>./_inc/images/battery-75-vertical.svg</at75>
         <at50>./_inc/images/battery-50-vertical.svg</at50>
         <at25>./_inc/images/battery-25-vertical.svg</at25>
         <empty>./_inc/images/battery-0-vertical.svg</empty>
         <incharge>./_inc/images/battery-charging-vertical.svg</incharge>
         <networkIcon>./_inc/images/wifi-vertical.svg</networkIcon>
    </batteryIndicator>
  </view>
  <view name="menu">
    <menuText name="menutitle">
      <fontPath>./assets/FOT.ttf</fontPath>
      <fontSize>0.046</fontSize>
      <color>ffffff</color>
    </menuText>
    <menuText name="menufooter">
      <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.04</fontSize>
    </menuText>
    <menuText name="menutext">
      <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.039</fontSize>
      <color>f0f0f0</color>
      <selectorColor>454545</selectorColor>
      <selectorColorEnd>1a1a1a</selectorColorEnd>
      <selectedColor>ffffff</selectedColor>
      <separatorColor>818181</separatorColor>
    </menuText>
    <menuTextSmall name="menutextsmall">
      <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.02</fontSize>
    </menuTextSmall>
    <menuBackground name="menubg">
      <color>181818</color>
      <cornerSize>32 32</cornerSize>
    </menuBackground>
  </view>
  <view name="system">
    <image name="staticBackground">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>
      <path>./assets/carbon.png</path>
      <zIndex>0</zIndex>
    </image>
    <helpsystem name="help">
      <origin>0 0</origin>
      <pos>0.18 0.92</pos>
      <textColor>ffffff</textColor>
      <iconColor>ffffff</iconColor>
    </helpsystem>
    <image name="logo">
      <path>./art/${system.theme}.svg</path>
      <!-- <verticalAlignment>bottom</verticalAlignment> -->
    </image>
    <text name="logoText">
      <fontPath>./assets/FOT.ttf</fontPath>
      <fontSize>0.092</fontSize>
      <color>FFFFFFFF</color>
    </text>
  </view>
  <view name="basic">
    <text name="description" extra="true">
      <pos>0.605 0.685</pos>
      <size>0.347 0.183</size>
      <alignment>center</alignment>
      <color>ffffff</color>
      <fontSize>0.025</fontSize>
      <text>No Information Available</text>
      <fontPath>./assets/FOT.ttf</fontPath>
    </text>
    <image name="none" extra="true">
      <origin>0.5 0.5</origin>
      <pos>0.776 0.388</pos>
      <maxSize>0.347 0.46</maxSize>
      <path>./assets/no_boxart.png</path>
    </image>
  </view>
  <view name="basic, detailed, grid">
    <helpsystem name="help">
      <origin>0 0</origin>
      <pos>0.16 0.95</pos>
      <textColor>ffffff</textColor>
      <iconColor>ffffff</iconColor>
    </helpsystem>
    <image name="background" extra="true">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <path>./assets/carbon.png</path>
      <zIndex>0</zIndex>
    </image>
    <image name="backgroundx" extra="true">
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <path>./assets/gamelist.png</path>
      <zIndex>0</zIndex>
      <color>FFFFFFFF</color>
    </image>
    <text name="system_name" extra="true">
      <text>${system.fullName}</text>
      <forceUppercase>0</forceUppercase>
      <size>0.5 0.025</size>
      <pos>0.02 0.025</pos>
      <color>ffffff</color>
      <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.04</fontSize>
      <zIndex>2</zIndex>
    </text>
    <text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate">
      <visible>false</visible>
    </text>
    <rating name="md_rating">
      <visible>false</visible>
    </rating>
    <image name="md_thumbnail">
      <visible>false</visible>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.5</pos>
      <minSize>1.25 1.25</minSize>
      <color>FFFFFF0A</color>
    </image>
    <video name="md_video">
      <origin>0.5 0.5</origin>
      <pos>0.776 0.388</pos>
      <maxSize>0.347 0.46</maxSize>
      <delay>0.7</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <snapshotSource>image</snapshotSource>
    </video>
    <text name="md_description">
      <pos>0.605 0.685</pos>
      <size>0.347 0.183</size>
      <color>ffffff</color>
      <fontSize>0.025</fontSize>
      <fontPath>./assets/FOT.ttf</fontPath>
    </text>
    <image name="logo">
      <pos>1 1</pos>
      <color>00000000</color>
      <path>./assets/box.png</path>
    </image>
  </view>
  <view name="basic, detailed">
    <textlist name="gamelist">
      <selectorColor>494949</selectorColor>
      <selectorColorEnd>1e1e1e</selectorColorEnd>
      <selectedColor>ffffff</selectedColor>
      <primaryColor>ffffff</primaryColor>
      <secondaryColor>ffffff</secondaryColor>
      <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.04</fontSize>
      <pos>0.051 0.170</pos>
      <size>0.50 0.70</size>
      <alignment>left</alignment>
      <horizontalMargin>0.01</horizontalMargin>
      <origin>0 0</origin>
      <lineSpacing>2.1</lineSpacing>
      <selectorImagePath>./assets/box.png</selectorImagePath>
      <selectorOffsetY>-0.01</selectorOffsetY>
      <selectorHeight>0.0675</selectorHeight>
    </textlist>
  </view>
  <view name="grid">
    <image name="md_image">
      <visible>false</visible>
    </image>
    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
      <color>A0A0B000</color>
    </text>
    <text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
      <color>ffffff00</color>
    </text>
    <datetime name="md_releasedate, md_lastplayed">
      <color>ffffff00</color>
    </datetime>
    <text name="md_rating">
      <pos>0.88 0.88</pos>
      <size>0.05 0.03</size>
    </text>
    <text name="md_name">
      <color>ffffffff</color>
      <pos>0.051 0.16</pos>
      <size>0.50 0.07</size>
      <alignment>center</alignment>
      <glowColor>00000005</glowColor>
      <glowSize>3</glowSize>
    </text>
    <imagegrid name="gamegrid">
      <pos>0.047 0.200</pos>
      <size>0.51 0.67</size>
      <margin>0.005 0.010</margin>
      <padding>0.03 0.05 0.03 0.04</padding>
      <autoLayout>3 1</autoLayout>
      <autoLayoutSelectedZoom>1.40</autoLayoutSelectedZoom>
      <animateSelection>false</animateSelection>
      <scrollDirection>horizontal</scrollDirection>
      <centerSelection>true</centerSelection>
      <scrollLoop>true</scrollLoop>
    </imagegrid>
    <gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>5 5</padding>
      <imageColor>FFFFFF90</imageColor>
    </gridtile>
    <gridtile name="selected">
      <backgroundColor>FFFFFF00</backgroundColor>
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>
    <!--
    <text name="gridtile">
      <color>D0D0D0</color>
      <backgroundColor>00000000</backgroundColor>
      <fontSize>0.022</fontSize>
      <alignment>center</alignment>
      <size>1 0.24</size>
    </text>
    <text name="gridtile_selected">
      <color>FFFFFF</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>3</glowSize>
    </text>-->
  </view>
  <view name="system">
    <carousel name="systemcarousel">
       <origin>0 0</origin>
       <pos>0 0</pos>
       <size>1 1</size>
       <color>00000000</color>
       <type>horizontal</type>
       <logoScale>2.3</logoScale>
       <logoSize>0.25 0.16</logoSize>
       <maxLogoCount>2</maxLogoCount>
       <maxLogoCount ifSubset="system-view-style:centered-one-logo">1</maxLogoCount>
       <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
       <defaultTransition>instant</defaultTransition>
    </carousel>
    <text name="systemInfo">
      <pos>0 0.59</pos>
      <size>1 0.25</size>
      <backgroundColor>00000000</backgroundColor>
      <color>ffffff</color>
      <fontPath>./assets/SEA.ttf</fontPath>
      <fontSize>0.03</fontSize>
    </text>
  </view>
  <subset name="background">
    <include name="carbon1">./assets/Carbon1.xml</include>
    <include name="carbon2">./assets/Carbon2.xml</include>
    <include name="carbon3">./assets/Carbon3.xml</include>
    <include name="carbon4">./assets/Carbon4.xml</include>
    <include name="carbon5">./assets/Carbon5.xml</include>
  </subset>
</theme>

